<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/holo_purple">

    <ImageView
        android:layout_marginStart="16dp"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/btn_notification_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_notification_stop"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:src="@drawable/selector_play_pause" />

    <ImageView
        android:id="@+id/btn_notification_stop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn_notification_play"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/btn_notification_timer"
        android:padding="11dp"
        android:src="@drawable/ic_stop" />

    <ImageView
        android:id="@+id/btn_notification_timer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:src="@drawable/ic_timer"/>

</RelativeLayout>